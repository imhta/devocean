<div class="comment-max" id="comment-<%= comment.id %>">
    <header class="comment-header d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">
        <div class="profile-img--default"><%= comment.user.initial %></div>
        <span class="user-name text-white m-2"><%= comment.user.display_name %></span>
    </div>
    <div class="time text-white p-2"> <%= time_ago_in_words(comment.created_at) %> ago</div>       
    </header>

    <div class="comment-body"><%= comment.body %></div>
</div>